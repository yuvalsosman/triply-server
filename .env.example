# Triply Server Environment

# Server
PORT=8080
FRONTEND_ORIGIN=http://localhost:5173
JWT_SECRET=dev-secret-change-me

# Database
# Set USE_SQLITE=1 for local development with SQLite; otherwise provide DATABASE_URL for Postgres
USE_SQLITE=1
SQLITE_PATH=dev.db
# DATABASE_URL=postgres://user:password@localhost:5432/triply?sslmode=disable

# Google OAuth
# Obtain credentials from Google Cloud Console (OAuth 2.0 Client IDs)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_URL=http://localhost:8080/auth/google/callback
